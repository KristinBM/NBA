<Window x:Class="Nba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nba"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="900">
    <Grid>
        <Frame Content="Frame" Margin="0,0,0,20" Source="StartPage.xaml" NavigationUIVisibility="Hidden"/>
        <TextBlock Padding="3" Margin="0" TextWrapping="Wrap" Text="The current season is 2016-2017, and the NBA already has a history of 71 years." VerticalAlignment="Bottom" Height="20" Style="{StaticResource MainText}" TextAlignment="Center" Background="#FF6995C2" Foreground="White"/>
    </Grid>
    

</Window>
